<div class="record-index contaiber">
  <div class="backimage">
    <div class="row">
      <div class="col-md-8">
        <h3>進捗の編集</h3>
        <%= form_with(model: @record, url: record_path(@record), local: true) do |r| %>
          <label class="new-record-title" for="">学習項目</label>
          <%= r.text_field :title, class: 'form-control' %>
          <label class="new-record-body" for="">進捗内容</label>
          <%= r.text_area :body, class: 'form-control', style: "height: 100px;" %>
          <label class="new-record-studytime sr-only" for="">学習時間</label><br>
          <div class="input-group">
            <span class="input-group-addon">学習時間：</span>
            <%= r.number_field :studytime, min: 0, max: 24, class: 'form-control', :step=>"0.1" %>
            <span class="input-group-addon">時間</span>
          </div>
          <div class="col-md-4">
            <div class="new-todo-create"><%= r.submit '変更を確定する', class: "btn btn-warning", style: "width: 150px;" %></div>
          </div>
          <div class="col-md-8">
            <br>
            <% if flash[:miss_recored_update] %>
              <div class="fadeout">
                <div class="alert alert-danger">
                  <%= flash[:miss_recored_update] %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>